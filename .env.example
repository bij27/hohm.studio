# hohm.ai Environment Configuration
# Copy this file to .env and configure for your environment

# Environment: development or production
ENVIRONMENT=production

# Allowed CORS origins (comma-separated)
# Example: https://hohm.ai,https://www.hohm.ai
ALLOWED_ORIGINS=https://yourdomain.com

# Allowed hosts for Host header validation (comma-separated)
# Prevents host header attacks
ALLOWED_HOSTS=hohm.ai,www.hohm.ai

# Rate limiting
RATE_LIMIT_RPM=120
RATE_LIMIT_BURST=30

# Session security - CHANGE THIS IN PRODUCTION
SESSION_SECRET_KEY=your-super-secret-key-change-this

# File upload limits (in MB)
MAX_UPLOAD_SIZE_MB=10

# Data directory (optional, defaults to ./data)
# DATA_DIR=/var/data/hohm

# Port (optional, defaults to 8000)
# PORT=8000
