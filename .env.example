# hohm.studio Environment Configuration
# Copy this file to .env and configure for your environment
# IMPORTANT: Never commit .env with real credentials to version control

# Database - Supabase PostgreSQL
# Get your connection string from Supabase Dashboard > Settings > Database
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD_HERE@db.YOUR_PROJECT.supabase.co:5432/postgres

# Environment: development or production
ENVIRONMENT=development

# Allowed CORS origins (comma-separated)
# Example: https://yourdomain.com,https://www.yourdomain.com
ALLOWED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# Allowed hosts for Host header validation (comma-separated)
# Prevents host header attacks in production
ALLOWED_HOSTS=localhost,127.0.0.1

# Rate limiting
RATE_LIMIT_RPM=120
RATE_LIMIT_BURST=30

# Session security - GENERATE A NEW SECRET FOR PRODUCTION
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SESSION_SECRET_KEY=GENERATE_A_NEW_SECRET_KEY_FOR_PRODUCTION

# File upload limits (in MB)
MAX_UPLOAD_SIZE_MB=10

# Data retention (days) - sessions older than this are auto-deleted
DATA_RETENTION_DAYS=90

# Cleanup interval (hours) - how often to run data retention cleanup
DATA_CLEANUP_INTERVAL_HOURS=24

# Data directory (optional, defaults to ./data)
# DATA_DIR=/var/data/hohm

# Port (optional, defaults to 8000)
# PORT=8000

# ElevenLabs API Key (for voice generation - optional)
# ELEVENLABS_API_KEY=your_api_key_here
